<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">

    <id>example-assembly</id>
    <formats>
        <format>jar</format>
    </formats>

    <fileSets>
        <fileSet>
            <!-- Include non-class files from src/main/resources -->
            <directory>src/main/java/com/ktsapi/testng/reports/</directory>
            <outputDirectory>target/classes//com/ktsapi/testng/reports/</outputDirectory>
            <includes>
                <include>reportTemplateV4.html</include>
                <include>*.html</include>
                <!-- Add more include patterns for other file types -->
            </includes>
        </fileSet>
    </fileSets>

</assembly>
